<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<!-- Mapping configuration details between Customer class and customer table -->
<hibernate-mapping package="CO.BIZGEN.data.model">

	<class name="User_Role" table="USER_ROLE">
		<id name="id" column="ID" >
			<generator class="identity" />
		</id>
		<property name="idUser" column="IDUSER" />
		<property name="idRole" column="IDROLE" />
	</class>

</hibernate-mapping>